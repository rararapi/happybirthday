# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,jsx,ts,tsx,json,html,css,scss,yml,yaml,md}]
charset = utf-8

# 2 space indentation
[*.js]
indent_style = space
indent_size = 10

# Tab indentation (no size specified)
[*.html]
indent_style = tab

# Tab indentation with a indent size of 4 spaces
[*.css]
indent_style = tab
indent_size = 4
